<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- Elemento principal RESULTS -->
    <xs:element name="RESULTS">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ROW" type="trow" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Tipo complejo para ROW -->
    <xs:complexType name="trow">
        <xs:sequence>
            <xs:element name="COLUMN" type="tcolumn" />
        </xs:sequence>
    </xs:complexType>

    <!-- Tipo complejo para COLUMN -->
    <xs:complexType name="tcolumn">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="NAME" type="xs:string" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- Elemento Jornadas -->
    <xs:element name="Jornadas">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Jornada" type="tjornada" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Tipo complejo para Jornada -->
    <xs:complexType name="tjornada">
        <xs:sequence>
            <xs:element name="Enfrentamiento" type="tenfrentamiento" maxOccurs="unbounded" />
        </xs:sequence>
        <xs:attribute name="Codigo_Jornada" type="xs:integer" use="required" />
        <xs:attribute name="Numero_Jornada" type="xs:integer" use="required" />
    </xs:complexType>

    <!-- Tipo complejo para Enfrentamiento -->
    <xs:complexType name="tenfrentamiento">
        <xs:sequence>
            <xs:element name="Codigo_Enfrentamiento" type="xs:integer" />
            <xs:element name="Equipo_Local" type="xs:string" />
            <xs:element name="Equipo_Visitante" type="xs:string" />
            <xs:element name="Ganador" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

</xs:schema>
