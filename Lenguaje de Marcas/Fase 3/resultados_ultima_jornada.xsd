<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="competiciones">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="competicion" type="tCompeticion" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="tCompeticion">
        <xs:sequence>
            <xs:element name="nombre_competicion" type="xs:string"/>
            <xs:element name="jornada" type="tJornada" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="id_competicion" type="xs:int" use="required"/>
    </xs:complexType>

    <xs:complexType name="tJornada">
        <xs:sequence>
            <xs:element name="numero_jornada" type="xs:int"/>
            <xs:element name="enfrentamiento" type="tEnfrentamiento" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="id_jornada" type="xs:int" use="required"/>
        <xs:attribute name="Fecha" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="tEnfrentamiento">
        <xs:sequence>
            <xs:element name="cod_equipo_local" type="xs:int"/>
            <xs:element name="cod_equipo_visitante" type="xs:int"/>
            <xs:element name="ganador" type="xs:string"/>
        </xs:sequence>
        <xs:attribute name="id" type="xs:int" use="required"/>
    </xs:complexType>

</xs:schema>
