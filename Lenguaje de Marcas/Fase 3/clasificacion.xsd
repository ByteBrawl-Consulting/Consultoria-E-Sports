<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- Elemento principal RESULTS -->
    <xs:element name="RESULTS">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ROW" type="trow" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Tipo complejo para ROW -->
    <xs:complexType name="trow">
        <xs:sequence>
            <xs:element name="COLUMN" type="tcolumn" />
        </xs:sequence>
    </xs:complexType>

    <!-- Tipo complejo para COLUMN -->
    <xs:complexType name="tcolumn">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="NAME" type="xs:string" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- Elemento Clasificacion -->
    <xs:element name="Clasificacion">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Equipo" type="tequipo" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Tipo complejo para Equipo -->
    <xs:complexType name="tequipo">
        <xs:sequence>
            <xs:element name="Nombre" type="tnombre" />
            <xs:element name="Puntos" type="tpuntos" />
        </xs:sequence>
    </xs:complexType>

    <!-- Tipo simple para Puntos -->
    <xs:simpleType name="tpuntos">
        <xs:restriction base="xs:integer" />
    </xs:simpleType>

    <!-- Tipo simple para Nombre -->
    <xs:simpleType name="tnombre">
        <xs:restriction base="xs:string" />
    </xs:simpleType>

</xs:schema>
